{
  "name": "daily-stock-analysis-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.4.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.daily-stock-analysis.desktop",
    "productName": "Daily Stock Analysis",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "../../.env.example",
        "to": ".env.example"
      },
      {
        "from": "../../dist/backend/stock_analysis",
        "to": "backend/stock_analysis"
      }
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
